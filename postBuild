tar -xzvf cellranger-3.1.0.tar.gz
tar -xzvf refdata-cellranger-GRCh38-and-mm10-3.1.0.tar.gz
wget -O longranger-2.2.2.tar.gz "http://cf.10xgenomics.com/releases/genome/longranger-2.2.2.tar.gz?Expires=1564278682&Policy=eyJTdGF0ZW1lbnQiOlt7IlJlc291cmNlIjoiaHR0cDovL2NmLjEweGdlbm9taWNzLmNvbS9yZWxlYXNlcy9nZW5vbWUvbG9uZ3Jhbmdlci0yLjIuMi50YXIuZ3oiLCJDb25kaXRpb24iOnsiRGF0ZUxlc3NUaGFuIjp7IkFXUzpFcG9jaFRpbWUiOjE1NjQyNzg2ODJ9fX1dfQ__&Signature=ONfGLYC~dRna2EcDN2W469Fml-NqYovHUJXBPxsHkdiYlLegMLlgcczAh~d4WY4mZt9hfql7rseSXHCVEskxG8teGrWwRMNfz7M28ZqbogAWoXyZTWjB~--5x~KD75yfofjeHwTVKk8eY27DhdeljBdx8nA8Tfeishw-F9Np6mntVk6qUWr6xJIqvNM71Ac2qJFHMTxFaT0wi-yuV968G6iP6~tRGmcPmy~EjxmUxklJaqMA5gWFoGL2RQIHv~DrBj7ulIw908XGfsOlgaKoe60g8d~sojeTja~l3zxO3BYyjtHWPbbu10fEMaAQKgf~UUTvydgdS4ODMLpuhBtIAw__&Key-Pair-Id=APKAI7S6A5RYOXBWRPDA"
wget http://cf.10xgenomics.com/supp/genome/refdata-hg19-2.1.0.tar.gz
tar -xzvf longranger-2.2.2.tar.gz
tar -xzvf refdata-hg19-2.1.0.tar.gz
export PATH=~/.local/longranger-2.2.2:$PATH
export PATH=~/.local/cellranger-3.1.0:$PATH
echo "export PATH=~/.local/longranger-2.2.2:$PATH" >> /home/$USERNAME/.bashrc
echo "export PATH=~/.local/cellranger-3.1.0:$PATH" >> /home/$USERNAME/.bashrc
cd
mkdir /test-ds/
ln -s /test-ds/ /home/$USERNAME/ .
cd
mkdir lib
cd lib
wget https://github.com/samtools/htslib/archive/1.9.tar.gz
tar -xvzf 1.9.tar.gz
cd htslib-1.9
./configure --prefix=/home/datasci/lib/htslib-1.9
make
make install
ln -s libhts.so.2 libhts.so.1
export LD_LIBRARY_PATH=/home/datasci/lib/htslib-1.9/

